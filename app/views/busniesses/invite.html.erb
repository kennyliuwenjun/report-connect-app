<h1><%= @busniess.name %></h1>

<% if flash[:invite_result] %>
  <div class="alert alert-danger">
    <%= flash[:invite_result]%>
  </div>
<% end %>

<%= form_tag busniess_invite_path(@busniess.id) do %>
  <div>
    <%= email_field_tag :email %>
  </div>
  <div>
    <%= label_tag 'as admin' %>
    <%= check_box_tag 'admin_box' %>
    <%= submit_tag "Invite" %>
  </div>
<% end %>
<%= link_to 'Back', busniess_path(@busniess.id) %>
