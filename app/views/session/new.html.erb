<%= form_tag login_path, :class => 'form-signin' do %>
  <%= image_tag 'ga_logo.png', :class => 'mb-4 login_logo'%>
  <h1 class="h3 mb-3 font-weight-normal" >Please sign in</h1>

  <% if flash[:error] %>
    <div class="alert alert-danger text-center">
      <%= flash[:error]%>
    </div>
  <% end %>
    <%= label_tag :email,nil, :class => "sr-only" %>
    <%= email_field_tag :email, nil,:class=>'form-control', :placeholder => 'Email address'%>
    <%= label_tag :password,nil, :class => "sr-only"   %>
    <%= password_field_tag :password, nil , :class=>'form-control', :placeholder => 'Password' %>

  <%= submit_tag "Log In", :class => 'btn btn-lg btn-primary btn-block'%>
  <p class="mt-5 mb-3 text-muted" >Â© 2018</p>
<% end %>
